<section id="product1" class="section-p1">
    <div class="pro-container">
        <label for="data" class="form-label"></label>
        <% if(Array.isArray(product)){%>
        <%for(let i = 0; i < product.length; i++){%>
        <div class="pro">
            <img src="<%=product[i].imageSRC%>">
            <div class="des">
                <h5><%=product[i].names%></h5>
                <div class="star">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <span><%=product[i].descriptions%></span>
                <h4><%=product[i].costs%><a> $$$</a></h4>
            </div>
            <a href="./views/toys.ejs" class="cart"><i class="fa-solid fa-cart-shopping"></i></a>
        </div>
        <%}%>
        <%}else{%>
        <label for="data" class="form-label"> <%=product%></label>
        <%}%>
    </div>
</section>

